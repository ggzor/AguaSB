<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.Buttons.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="Button" BasedOn="{StaticResource SquareButtonStyle}">
        <Setter Property="metro:ButtonHelper.PreserveTextCase" Value="True"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <Style x:Key="HighlightButton" TargetType="Button" BasedOn="{StaticResource AccentedSquareButtonStyle}">
        <Setter Property="metro:ButtonHelper.PreserveTextCase" Value="True"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>
</ResourceDictionary>