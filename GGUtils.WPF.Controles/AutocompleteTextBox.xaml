<UserControl x:Class="GGUtils.WPF.Controles.AutocompleteTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GGUtils.WPF.Controles"
             xmlns:Controlz="clr-namespace:ControlzEx;assembly=ControlzEx"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>        
        <TextBox Name="TextBox" GotKeyboardFocus="TextBox_GotKeyboardFocus" LostKeyboardFocus="TextBox_LostKeyboardFocus" 
                 PreviewMouseDown="TextBox_MouseDown" PreviewKeyDown="TextBox_PreviewKeyDown"/>

        <Controlz:PopupEx Name="Popup" PlacementTarget="{Binding ElementName=TextBox}" 
                          AllowsTransparency="True" PopupAnimation="Fade"
                          Width="{Binding ElementName=TextBox, Path=ActualWidth}"
                          Height="100"
                          IsOpen="{Binding ElementName=Check, Path=IsChecked, Mode=TwoWay}">
            <local:AutocompleteSuggestions x:Name="Autocomplete" Focusable="False" Height="100"/>
        </Controlz:PopupEx>
    </StackPanel>
</UserControl>
