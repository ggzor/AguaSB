<UserControl x:Class="AguaSB.Usuarios.Views.Agregar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:icons="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:Converters="clr-namespace:GGUtils.WPF.ValueConverters;assembly=GGUtils.WPF"
             xmlns:Views="clr-namespace:AguaSB.Views.Controles;assembly=AguaSB.Views"
             xmlns:ViewModel="clr-namespace:AguaSB.Usuarios.ViewModels;assembly=AguaSB.Usuarios.ViewModels"
             xmlns:Sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             Background="White"
             Name="This"
             d:DataContext="{d:DesignInstance Type=ViewModel:Agregar, IsDesignTimeCreatable=False}"
             d:DesignHeight="768" d:DesignWidth="1024">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/AguaSB.Estilos;component/Resources/Estilos.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Converters:EqualsTo x:Key="EqualsTo"/>
            <Converters:BoolToVisibility x:Key="BoolToVisibility"/>
            <Sys:Int32 x:Key="Retraso">200</Sys:Int32>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Name="Principal" Style="{StaticResource CorrectTextRendering}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="550"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Views:BarraSuperior Grid.ColumnSpan="3" Titulo="Agregar nuevo usuario">
            <Views:BarraSuperior.Icono>
                <icons:PackIconModern Kind="Add" Foreground="White" Width="20" Height="20"/>
            </Views:BarraSuperior.Icono>
        </Views:BarraSuperior>

        <material:Card Grid.Column="1" Grid.Row="1" Margin="10" Padding="40 20" 
                       VerticalAlignment="Stretch">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <ListBox Name="TipoUsuario" HorizontalAlignment="Center" SelectedIndex="0" 
                         Style="{StaticResource ToggleList}">
                    <ListBox.Resources>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Black"/>
                        </Style>
                    </ListBox.Resources>
                    <ListBox.ItemTemplate>
                        <DataTemplate DataType="{x:Type Button}">
                            <StackPanel Orientation="Horizontal">
                                <ContentControl Content="{Binding Content}" VerticalAlignment="Center"/>
                                <TextBlock Margin="10 0" FontFamily="Segoe UI" Text="{Binding Tag}" Style="{StaticResource h5}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <Button Tag="Persona">
                        <icons:PackIconModern Kind="User"/>
                    </Button>
                    <Button Tag="Negocio">
                        <icons:PackIconModern Kind="City"/>
                    </Button>
                </ListBox>

                <metro:FlipView Name="Campos" Grid.Row="2" Margin="0 20 0 0" SelectedIndex="{Binding ElementName=TipoUsuario, Path=SelectedIndex}" 
                                IsBannerEnabled="False" IsNavigationEnabled="False" MouseHoverBorderEnabled="False">
                    <ScrollViewer Name="CamposPersona" Padding="20 10">
                        <StackPanel VerticalAlignment="Center">
                            <StackPanel.Resources>
                                <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                    <Setter Property="IsReadOnly" Value="{Binding AgregarPersonaComando.Execution.IsNotCompleted}"/>
                                </Style>
                            </StackPanel.Resources>

                            <TextBox Margin="0 10 0 30" Tag="Nombre"
                                     Text="{Binding Persona.Nombre, ValidatesOnNotifyDataErrors=True, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource Retraso}}"/>

                            <TextBox Tag="Apellido paterno" 
                                     Text="{Binding Persona.ApellidoPaterno, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource Retraso}}"/>

                            <TextBox Tag="Apellido materno" Text="{Binding Persona.ApellidoMaterno, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource Retraso}}"/>

                            <TextBox Tag="Número telefónico"
                                     Text="{Binding Persona.Contactos[0].Informacion, ValidatesOnNotifyDataErrors=True, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource Retraso}}"/>

                            <TextBlock Name="MensajeErrorPersona" Text="{Binding AgregarPersonaComando.Execution.ExceptionMessage}" Style="{StaticResource error}"
                                       Tag="{Binding MostrarMensajeErrorPersona}"/>

                            <Views:AnilloProgreso Margin="0 10" EsVisible="{Binding AgregarPersonaComando.Execution.IsNotCompleted}"
                                                  Texto="{Binding AgregarPersonaComando.ProgressMessage}"/>

                            <Views:ParBotones Margin="0 20" TextoPrimario="Agregar" TextoSecundario="Reestablecer"
                                              ComandoPrimario="{Binding AgregarPersonaComando}"
                                              ComandoSecundario="{Binding ReestablecerPersonaComando}"/>
                        </StackPanel>
                    </ScrollViewer>

                    <ScrollViewer Name="CamposNegocio">
                        <StackPanel VerticalAlignment="Center">
                            <StackPanel.Resources>
                                <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                    <Setter Property="IsReadOnly" Value="{Binding AgregarNegocioComando.Execution.IsNotCompleted}"/>
                                </Style>
                            </StackPanel.Resources>

                            <TextBox Margin="0 10 0 30" Tag="Nombre del negocio"
                                     Text="{Binding Negocio.Nombre, ValidatesOnNotifyDataErrors=True, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource Retraso}}"/>

                            <TextBox Tag="RFC"
                                     Text="{Binding Negocio.Rfc, ValidatesOnNotifyDataErrors=True, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource Retraso}}"/>

                            <TextBox Tag="Número telefónico"
                                     Text="{Binding Negocio.Contactos[0].Informacion, ValidatesOnNotifyDataErrors=True, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource Retraso}}"/>

                            <!--Representante-->
                            <TextBlock Margin="0 20" Text="Representante:" Style="{StaticResource h3}"/>

                            <TextBox Tag="Nombre"
                                     Text="{Binding Negocio.Representante.Nombre, ValidatesOnNotifyDataErrors=True, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource Retraso}}"/>

                            <TextBox Tag="Apellido paterno"
                                     Text="{Binding Negocio.Representante.ApellidoPaterno, ValidatesOnNotifyDataErrors=True, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource Retraso}}"/>

                            <TextBox Tag="Apellido materno"
                                     Text="{Binding Negocio.Representante.ApellidoMaterno, ValidatesOnNotifyDataErrors=True, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource Retraso}}"/>

                            <TextBox Tag="Número telefónico"
                                     Text="{Binding Negocio.Representante.Contactos[0].Informacion, ValidatesOnNotifyDataErrors=True, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource Retraso}}"/>

                            <TextBlock Name="MensajeErrorNegocio" Text="{Binding AgregarNegocioComando.Execution.ExceptionMessage}" Style="{StaticResource error}"
                                       Tag="{Binding MostrarMensajeErrorNegocio}"/>

                            <Views:AnilloProgreso Margin="0 10" EsVisible="{Binding AgregarNegocioComando.Execution.IsNotCompleted}"
                                                  Texto="{Binding AgregarNegocioComando.ProgressMessage}"/>

                            <Views:ParBotones Margin="0 20" TextoPrimario="Agregar" TextoSecundario="Reestablecer"
                                              ComandoPrimario="{Binding AgregarNegocioComando}"
                                              ComandoSecundario="{Binding ReestablecerNegocioComando}"/>
                        </StackPanel>
                    </ScrollViewer>
                </metro:FlipView>

                <StackPanel Name="TextoCuandoNoHaySeleccion" Grid.Row="1" IsHitTestVisible="False" Style="{StaticResource FadeTag}" Opacity="0"
                            Tag="{Binding ElementName=Campos, Path=SelectedIndex, Converter={StaticResource EqualsTo}, ConverterParameter=-1}"
                            HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock TextAlignment="Center" TextWrapping="WrapWithOverflow" 
                               Width="400"
                               Text="Seleccione alguna de las opciones que aparece en la parte superior"
                               Style="{StaticResource h3}"/>
                </StackPanel>
            </Grid>
        </material:Card>
    </Grid>
</UserControl>
