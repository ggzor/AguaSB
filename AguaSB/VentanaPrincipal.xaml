            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Window.Background>
        <ImageBrush ImageSource="Fondo.jpg" Stretch="UniformToFill">
            <ImageBrush.Transform>
                <TranslateTransform Y="-150"/>
